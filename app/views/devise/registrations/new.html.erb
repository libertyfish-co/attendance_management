<h2>社員登録</h2>
<div class="container-fluid">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name),multipart: :true) do |f| %>
<div class="bg-danger">
  <% if resource&.errors %>
    <ul><!-- form error messages -->
    <%  resource.errors.full_messages.each do |message|  %>
          <li><%= message %></li>
    <%  end %>
    </ul>
  <% end %>
</div>

  <div class="form-inputs">
    <div class="form-group">
    <%= f.label "*社員番号" %>
    <%= f.text_field :emp_num,
                required: true,
                autofocus: true,
                class: "form-control" %>
    </div>
    <div class="form-group">
    <%= f.label "*名前" %>
    <%= f.text_field :emp_name,
                required: true,
                class: "form-control" %>
    </div>            
    <div class="form-group">   
    <%= f.label "*Eメール" %>
    <%= f.text_field :email,
                required: true,
                class: "form-control" %>
    </div>
    <div class="form-group">
    <%= f.label "*パスワード" %>            
    <%= f.password_field :password,
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                class: "form-control",
                placeholder: '半角英数字（大文字小文字の区別あり）'%>
    </div>            
    <div class="form-group">   
    <%= f.label "*パスワード再入力" %>
    <%= f.password_field :password_confirmation,
                required: true,
                class: "form-control" %>
    </div>            
  </div>
  
  
  <div class="form-actions">
    <%= f.submit "登録" ,class: "btn btn-primary" %>
  </div>
<% end %>
<br>
<div class="links">
<%= render "devise/shared/links" %>
</div>
</div>