<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="login">
    <div class="field">
      <%= f.label :user_code, "ユーザーコード" %><br />
      <%= f.email_field :user_code, autofocus: true, autocomplete: "user-code", placeholder: "メールアドレスを入力してください"%>
    </div>
    <div class="field">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワードを入力してください"%>
    </div>

    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  </div>
  <% end %>

<style>
  input[type="email"],
  input[type="password"]{
    width:200px;
    height:40px;
    outline: solid 2px rgba(56, 96, 178, 1);
    border-radius: 5px;
  }

  input[type="email"]::placeholder,
  input[type="password"]::placeholder{
     font-size:12px;
  }

  input[type="submit"]{
    width:95px;
    height:25px;
    color:white;
    background-color:rgba(56, 96, 178, 1);
    border-radius: 5px;
  
  }

  label{
    margin-bottom:0;
    padding-bottom:5px;
  }
  
  .field{
    margin:0 auto;
    width:200px;
    padding-bottom:15px;
  }

  .login{
     margin:0 auto;
     font-size:13px;
  } 

  .actions{
    text-align:center;
    padding-top:20px;
  }
</style>

