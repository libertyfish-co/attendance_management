<div class="padding-20px">
    <div class="fontSize-13px padding-10px0px">
    <div>会社：<%= sprintf("%04d", @emp.corporation.id) %>　　<%= @emp.corporation.name %></div>
    <div>社員：<%= @emp.employee_code %>　　<%= @emp.name %></div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-light padding-0">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
    
        <%# ↓ここに各自日付入力フォームを適宜作成 %>
        <div class="mr-auto d-flex">
        </div>
        <div class="my-lg-0input-group-prepend header__select__adjust">
            <select class="form-control" id="transitionControlSelect">
