                ['/sale/new','ハンコ登録',:get],['/employees/password/edit','パスワード変更',:get],
                ['/employees/sign_out','ログアウト',:delete]].each do |path,title,method|%>
                    <option>
                      <%= link_to(path, {method: method}) do%>
                        <%= title %>
                      <% end %>
                    </option>
                <% end %>
            </select>
        </div>
    </div>
    </nav>
