<%# javascript_pack_tag 'attendances/index'%>

<style>
    .title{
        text-align: center;
    }
    .transition{
        font-size: 28px;
        margin-bottom: 10px;
        text-decoration: none;
    }
    a:hover {
        text-decoration: none;
    }
    .bi{
        color: #0060b2;
    }
    table{
        font-size: 14px;
    }
    thead {
        background-color: #0060b2;
        color: #fff;
    }
    table tr th.pb{
        padding-bottom: 21px;
    }
    table tr th.pb2{
        padding-bottom: 10px;
    }
    table, td, th {
        border: 2px #3d3f9e solid;
    }
    .table thead th {
        vertical-align: bottom;
        border-bottom: 2px #3d3f9e solid;
    }
    .border-bottom {
        border-bottom: 2px #3d3f9e solid !important;
    }
    .border-top{
        border-top: none;
    }
    .side-line{
        border-right:none;
    }
    .today{
        background-color: #ffc107;
    }
    .sat {
        color: #0000ff;
        background-color: #9dd7fb;
    }
    .sun{
        color: #FF0000;
        background-color: #9dd7fb;
    }

    button{
        width: 150px;
        border: 1px #3d3f9e solid;
        appearance: none;
        border-radius: 5px;
        background: #0060b2;
        color: #fff;
        padding: 8px 16px;
        font-size: 16px;
    }
    #print_aria {
        display: none;
    }
    @media print {
        #print_aria {
            display: block;
        }
    }
</style>

<div class="mx-4 row">
    <!-- 先月・翌月遷移 -->
    <div class="col-4 transition">
        <%= link_to attendances_path('date': @nav_prev) do %>
            <i class="bi bi-arrow-left-circle"></i>
        <% end %>
        <%= format_to(@month,:ym) %>
        <%= link_to attendances_path('date': @nav_next) do %>
            <i class="bi bi-arrow-right-circle"></i>
        <% end %>
    </div>

    <h2 class="col-4 title">
        月勤怠表
    </h2>
</div>

<div id="attd_table">
    <%= render 'table', attendances: @attendances %>
</div>
<div class="clearfix mx-4">
    <div class="float-right">
        <%= form_tag(url_for(:action => 'check'), :remote => true) do %>
            <%= hidden_field_tag :date, @month %>
            <%= submit_tag "チェック" %>
        <% end %>
        <button type="button" class="ml-4">帳簿出力</button>
        <button type="button" class="ml-4" onclick="$('#exampleModalCenter').modal('show')">オーダー別</button>
    </div>
</div>


<!-- Modal -->
<div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalCenterTitle">オーダー選択</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with url: url_for(:action => 'orders') do |f|%>
        <%= f.hidden_field :date, value: @month %>
        <div class="modal-body">
            <% 8.times do |i| %>
                <%= f.collection_select :order_id, @orders, :id, :name, 
                { include_blank: '選択してください'}, { class: 'form-control', name: "attendance_detail[orders][#{i}]"} %>
            <% end %>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= f.submit "オーダー出力", {class: "btn btn-primary"} %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render 'print' %>